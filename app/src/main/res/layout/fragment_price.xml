<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/price_title_label"/>

    <EditText
        android:id="@+id/price_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/price_title_hint"/>

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/price_details_label"/>

    <Button
        android:id="@+id/price_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/price_solved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/price_solved_label"/>

    <Button
        android:id="@+id/price_suspect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/price_suspect_text"
        />
    <Button
        android:id="@+id/price_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/report_prices_text"
        />
    <Button
        android:id="@+id/price_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/price_call_text"
        />

</LinearLayout>